<div class="container pt-5">
  <div class="row d-flex justify-content-center">
    <div class="col-12 col-lg-6">
      <h1 class="text-center">Add a new song</h1>
      <%= simple_form_for [@bass, @song] do |f| %>
      <%= f.input :title %>
      <%= f.input :album %>
      <%= f.input :year, collection: 1940..2020, input_html: { class: 'select2'} %>
      <%= f.input :genre, collection: @genres, input_html: { class: 'select2'} %>
      <%= f.input :artist, collection: @artists, input_html: { class: 'select2'} %>
      <%= f.input :youtube_url %>
      <%= f.input :photo, as: :file %>
      <%= f.submit class: "btn btn-success btn-lg btn-block" %>
      <% end %>
    </div>
  </div>
</div>
