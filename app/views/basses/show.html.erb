<!-- Banner and main info -->
<% @bass.photos.each do |photo| %>
  <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill %>
<% end %>
<h1><%= "#{@bass.name} by #{@bass.manufacturer.name}"%></h1>
<p>
  <%= "Made in #{@bass.year}, #{@bass.string_num} strings, #{@bass.fretless ? 'fretless' : 'fretted'}, #{@bass.active ? 'active' : 'passive'}" %>
</p>


 <!-- List of Artists -->
<h2>Artists</h2>
<%= link_to "add a song", new_bass_song_path(@bass)  %>
<ul>
  <% @bass.artists.each do |artist| %>
  <li>
    <%= "#{artist.name}, #{artist.group}" %>
  </li>
  <% end %>
</ul>

<!-- List of Songs -->
<h2>Songs</h2>
<!-- Button trigger modal -->
<ul>
  <% @bass.songs.each do |song| %>
  <li>
    <%= cl_image_tag song.photo.key, height: 300, width: 400, crop: :fill %>
    <%= "#{song.genre.name}: #{song.title} played by #{song.artist.name}, #{song.album} - #{song.year }" %>
    <%= link_to "Play", "https://www.youtube.com/watch?v=Y-G4PTysacI", target: 'blank' %>
  </li>
  <% end %>
</ul>

<!-- Reviews -->
<h2>Comments</h2>
<%= link_to "Add a comment", new_bass_comment_path(@bass) %>
<ul>
  <% @bass.comments.each do |comment| %>
  <li>
    <%= "#{'*' * comment.rating}: #{comment.content}" %>
  </li>
  <% end %>
</ul>


